{
  "name": "qrcode-caption",
  "description": "Wrapper around the qrcode lib to generate QR codes with a caption",
  "version": "0.0.1",
  "author": "Mathieu-COSYNS",
  "keywords": [
    "qr",
    "code",
    "canvas",
    "qrcode",
    "caption"
  ],
  "type": "module",
  "module": "dist/bundle.esm.min.js",
  "browser": "dist/bundle.umd.min.js",
  "main": "dist/bundle.esm.min.js",
  "types": "dist/qrcode-caption.d.ts",
  "scripts": {
    "dev": "rollup -c -w",
    "build": "rollup -c",
    "test": "vitest",
    "format": "prettier . --write",
    "lint": "eslint . --report-unused-disable-directives --max-warnings 0"
  },
  "homepage": "https://github.com/Mathieu-COSYNS/qrcode-caption",
  "repository": {
    "type": "git",
    "url": "https://github.com/Mathieu-COSYNS/qrcode-caption"
  },
  "bugs": {
    "url": "https://github.com/Mathieu-COSYNS/qrcode-caption/issues"
  },
  "license": "MIT",
  "dependencies": {
    "qrcode": "^1.5.3"
  },
  "devDependencies": {
    "@babel/core": "^7.22.19",
    "@babel/preset-env": "^7.22.15",
    "@ianvs/prettier-plugin-sort-imports": "^4.1.0",
    "@rollup/plugin-babel": "^6.0.3",
    "@rollup/plugin-commonjs": "^25.0.4",
    "@rollup/plugin-eslint": "^9.0.4",
    "@rollup/plugin-node-resolve": "^15.2.1",
    "@rollup/plugin-terser": "^0.4.3",
    "@rollup/plugin-typescript": "^11.1.3",
    "@types/qrcode": "^1.5.2",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "eslint": "^8.49.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "prettier": "^3.0.3",
    "rollup": "^3.29.1",
    "rollup-plugin-dts": "^6.0.2",
    "tslib": "^2.6.2",
    "typescript": "^5.2.2",
    "vitest": "^0.34.4"
  }
}
