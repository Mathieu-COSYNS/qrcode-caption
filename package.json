{
  "name": "qrcode-caption",
  "description": "Wrapper around the qrcode lib to generate QR codes with a caption",
  "version": "0.1.1",
  "author": "Mathieu-COSYNS",
  "keywords": [
    "qr",
    "code",
    "canvas",
    "qrcode",
    "caption"
  ],
  "files": [
    "dist/*"
  ],
  "type": "module",
  "sideEffects": false,
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.cjs",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "test": "vitest",
    "coverage": "vitest run --coverage.enabled --coverage.include=src",
    "release": "pnpm run build && pnpm changeset publish",
    "format": "prettier . --write",
    "lint": "eslint . --max-warnings 0",
    "typecheck": "tsc --noEmit"
  },
  "homepage": "https://github.com/Mathieu-COSYNS/qrcode-caption",
  "repository": {
    "type": "git",
    "url": "https://github.com/Mathieu-COSYNS/qrcode-caption"
  },
  "bugs": {
    "url": "https://github.com/Mathieu-COSYNS/qrcode-caption/issues"
  },
  "license": "MIT",
  "dependencies": {
    "mini-svg-data-uri": "^1.4.4",
    "qrcode": "^1.5.4",
    "underscore": "^1.13.7"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@ianvs/prettier-plugin-sort-imports": "^4.1.1",
    "@types/qrcode": "^1.5.5",
    "@types/underscore": "^1.11.15",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitest/coverage-v8": "^2.1.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "prettier": "^3.1.1",
    "terser": "^5.34.1",
    "tsup": "^8.3.0",
    "typescript": "^5.3.3",
    "vitest": "^2.1.1"
  }
}
